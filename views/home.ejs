<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Web Development Blog</title>
  </head>
  <body>
    <!-- HEader-->
    <%- include('partials/header') %>

    <!-- Body-->
    <h1>Home</h1>
    <p><%= homeCon %></p>

    <!-- show the posts using loops-->

    <% array.forEach((elem) =>{ %>

    <h1><%= elem.title %></h1>

    <!-- only show 100 characters-->
    <p>
      <%= elem.post.substring(0,100) + "..." %>
      <a href="/posts/<%= elem.title %>">Read More</a>
    </p>
    <% }) %>

    <!--Footer-->
    <%-include('partials/footer') %>
  </body>
</html>
